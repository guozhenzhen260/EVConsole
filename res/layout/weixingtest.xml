<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
         android:layout_width="wrap_content"
   		 android:layout_height="wrap_content"
   		 android:orientation="horizontal">
   		 <ImageView
		    android:id="@+id/imgweixingtest"
		    android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/wutupian"
	        />
   		 <ProgressBar
	        android:id="@+id/barweixingtest"
	        style="?android:attr/progressBarStyleLarge"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:visibility="gone"
	        android:indeterminate="true" />
   	</LinearLayout>    
    <TextView 	
        android:id="@+id/txtweixingtest"
   	    android:minWidth="160px"	  
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="交易结果:"
		android:textColor="#8C6931"
        android:textSize="25dp"/>
	<LinearLayout
	         android:layout_width="wrap_content"
    		 android:layout_height="wrap_content"
    		 android:orientation="horizontal">
    		 <TextView 	
           	    android:minWidth="160px"	  
           	    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="支付金额:"/>
	        
	         <EditText
	            android:id="@+id/edtweixingtest"
		        android:minWidth="150px"
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:textSize="40sp"
	            android:textStyle="bold"	
	            android:numeric="decimal"
	            android:text="0" />	         		 
    	</LinearLayout>
    	<LinearLayout
	         android:layout_width="wrap_content"
    		 android:layout_height="wrap_content"
    		 android:orientation="horizontal">
    		 <Button
			    android:id="@+id/btnweixingtestok"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="生成二维码"/>	
		     <Button
			    android:id="@+id/btnweixingtestquery"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="查询"/>	
		     <Button
			    android:id="@+id/btnweixingtestdelete"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="撤销交易"/>	
		     <Button
			    android:id="@+id/btnweixingtestpayout"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="退款"/>	
    	</LinearLayout>
    	<Button
			    android:id="@+id/btnweixingtestcancel"
			    android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="退出"/>
</LinearLayout>
