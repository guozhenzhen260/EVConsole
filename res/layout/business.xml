	        android:layout_below="@+id/ivadsxjp"	       
	        android:textColor="#8C6931"
	        android:src="@drawable/one" />   
	    <ImageButton
	        android:id="@+id/btnads2"
	        android:layout_width="122dp"
	        android:layout_height="60dp"
	        android:layout_toRightOf="@+id/btnads1" 
	        android:layout_below="@+id/ivadsxjp"
	        android:textColor="#8C6931"
