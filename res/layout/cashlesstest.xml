<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 	
        android:id="@+id/txtcashlesstest"
   	    android:minWidth="160px"	  
   	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="读卡器交易结果:"
		android:textColor="#8C6931"
        android:textSize="25dp"/>
	<LinearLayout
         android:layout_width="wrap_content"
   		 android:layout_height="wrap_content"
   		 android:orientation="horizontal">
   		 <TextView 	
          	    android:minWidth="160px"
          	    android:textSize="40sp"	  
          	    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="支付金额:"/>
        
         <EditText
            android:id="@+id/edtcashlesstest"
	        android:minWidth="150px"
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:textSize="40sp"
            android:textStyle="bold"	
            android:numeric="decimal"	
            android:text="0"/>	         		 
   	</LinearLayout>
   	<LinearLayout
         android:layout_width="wrap_content"
   		 android:layout_height="wrap_content"
   		 android:orientation="horizontal">
         <Button
		    android:id="@+id/btncashlesstestopen"
		    android:layout_width="100dp"
			android:layout_height="70dp"
			android:background="@drawable/button_selector"
	        android:text="打开"/>
   		 <Button
		    android:id="@+id/btncashlesstestok"
		    android:layout_width="100dp"
			android:layout_height="70dp"
			android:background="@drawable/button_selector"
	        android:text="扣款"/>	
	     <Button
		    android:id="@+id/btncashlesstestquery"
		    android:layout_width="100dp"
			android:layout_height="70dp"
			android:background="@drawable/button_selector"
	        android:text="查询"/>
	     <Button
		    android:id="@+id/btncashlesstestclose"
		    android:layout_width="100dp"
			android:layout_height="70dp"
			android:background="@drawable/button_selector"
	        android:text="关闭"/>
	     <Button
		    android:id="@+id/btncashlesstestcancel"
		    android:layout_width="100dp"
			android:layout_height="70dp"
			android:background="@drawable/button_selector"
	        android:text="退出"/>
   	</LinearLayout>
</LinearLayout>
