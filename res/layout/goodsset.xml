<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"		
	    android:orientation="vertical" >
	    <TableLayout 
			android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<ImageView  
				        android:id="@+id/ivProduct"  
				        android:layout_width="wrap_content"   
				        android:layout_height="wrap_content"   
				     /> 
			        
			         <Button   
				        android:id="@+id/btnImg"  
				        android:text="选择图片"
				        android:layout_width="100dp"   
				        android:layout_height="70dp"   
				    /> 
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<TextView 		    
	            	    android:minWidth="160px"
	            	    android:textSize="40sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF0000"  
						android:text="*商品编号:"/>
			        
			         <EditText
			            android:id="@+id/edtproductID"
			            android:textSize="40sp"
				        android:minWidth="150px"
						android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:text="" />
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<TextView 		    
	            	    android:minWidth="160px"
	            	    android:textSize="40sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF0000"  
						android:text="*商品名称:"/>
			        
			         <EditText
			            android:id="@+id/edtproductName"
			            android:textSize="40sp"
				        android:minWidth="150px"
						android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:text="" />
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<TextView 		    
	            	    android:minWidth="160px"
	            	    android:textSize="40sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF0000"  
						android:text="*原价:"/>
			        
			         <EditText
			            android:id="@+id/edtmarketPrice"
			            android:textSize="40sp"
				        android:minWidth="150px"
						android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:numeric="decimal"
				        android:text="0" />
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<TextView 		  
	            	    android:minWidth="160px"  
	            	    android:textSize="40sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#FF0000" 
						android:text="*销售价:"/>
			        
			         <EditText
			            android:id="@+id/edtsalesPrice"
			            android:textSize="40sp"
				        android:minWidth="150px"
						android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:numeric="decimal"
				        android:text="0" />
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<TextView 		 
	            	    android:minWidth="160px"   
	            	    android:textSize="40sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="保质期:"/>
			        
			         <EditText
			            android:id="@+id/edtshelfLife"
			            android:textSize="40sp"
				        android:minWidth="150px"
						android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:numeric="integer"
				        android:text="0" />
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />
		     <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<TextView 		 
	            	    android:minWidth="160px"   
	            	    android:textSize="40sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="商品类别:"/>
			        
			         <Spinner
			            android:id="@+id/spinproductclassID"
				        android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:text="" />
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<TextView 		
	            	    android:minWidth="160px"    
	            	    android:textSize="40sp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="商品描述:"/>
			        
			         <WebView
			            android:id="@+id/webproductDesc"
			            android:textSize="40sp"
				        android:minWidth="150px"
						android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:text="" />
	            </LinearLayout>	        
		    </TableRow> 
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	<TextView 	
	            	    android:minWidth="160px"	  
	            	    android:textSize="40sp"  
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="修改时间:"/>
			        
			         <TextView
			            android:minWidth="160px"
			            android:textSize="40sp"
			            android:id="@+id/onloadTime"
				        android:layout_width="wrap_content" 
				        android:layout_height="wrap_content"
				        android:text="" />
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />	
		    <TableRow > 
		        <LinearLayout 
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:orientation="horizontal"> 
	            	 <Button   
				        android:id="@+id/btnaddProSave"  
				        android:text="保存"
				        android:layout_width="100dp"   
				        android:layout_height="70dp"   
				    /> 
				    <Button   
				        android:id="@+id/btnaddProexit"  
				        android:text="返回"
				        android:layout_width="100dp"   
				        android:layout_height="70dp"   
				    /> 
	            </LinearLayout>	        
		    </TableRow>  
		    <View                              
		        android:layout_height="2px"
		        android:background="#FF909090"
		    />    
		</TableLayout>
	</LinearLayout>		
</ScrollView>
